            //         field.classList.add('focus');
            //     };
            //     input.onblur = ()=>{
            //         field.classList.remove('focus');
            //         if (!input.value) {
            //             field.classList.remove('float');
            //         }
            //     };
            // }

            let checkeds = document.querySelectorAll('input[type=checkbox]');

            for (let index = 0; index < checkeds.length; index++) {
                const element = checkeds[index];
                console.log(element);
                element.onclick = function() {
                    console.log(element);
                    element.value = element.checked;
                };
            }

            function getModel() {
                let model = {};
                let inputs = document.querySelectorAll('input.campo-texto');
                addProprietie(inputs, model);
                let selects = document.querySelectorAll('select');
                addProprietie(selects, model);
                console.log(model);
            }

            function addProprietie(objetos, model) {
                for (let index = 0; index < objetos.length; index++) {
                    const objeto = objetos[index];
                    validate(objeto);
                    model[objeto.getAttribute('name')] = objeto.value;
                }
            }

            function validate(input) {
                if (input.hasAttribute('required') && input.value == "") {
                    input.style.borderColor = 'red';
                    console.log(`label[for=${input.getAttribute('name')}]`);
                    let label = document.querySelector(`label[for=${input.getAttribute('name')}]`);
                    label.style.color = 'red';
                    return true;
                } else {
                    return false;
                }
            }

            function sucess() {
                $(".notify").toggleClass("active");
                $(".notify").toggleClass("success");
                $("#notifyType").html("Adicionado com Sucesso!");
                $(".notify").show();

                setTimeout(function() {
                    $(".notify").removeClass("active");
                    $(".notify").removeClass("success");
                    $(".notify").hide();
                }, 5000);
            }

            function failure() {
                $(".notify").addClass("active");
                $(".notify").addClass("failure");
                $("#notifyType").html("Error ao adicionar!");
                $(".notify").show();

                setTimeout(function() {
                    $(".notify").removeClass("active");
                    $(".notify").removeClass("failure");
                    $(".notify").hide();
                }, 5000);
            }


            $('#busca').click(function(event) {
                event.preventDefault();
                var busca = $('#input').val();
                $.ajax({
                    method: 'PUT',
                    url: "/cadastros/categoria",
                    data: {
                        busca: busca
                    },
                    success: function(resposta) {
                        var dados = resposta;
                        document.getElementById('id').value = dados[0]['_id'];
                        document.getElementById('codigo').value = dados[0]['codigo'];
                        document.getElementById('name').value = dados[0]['name'];
                        document.getElementById('myonoffswitch').value = dados[0]['ativo'];
                        document.getElementById('myonoffswitch1').value = dados[0]['pizza'];


                        // window.location.href = "/compra/cadastro?success=1";

                    }
                });
                // console.log(busca);
                // document.getElementById('codigo').value = 'teste';


            });
        </script>

        <% if(situacao.situacao==1){%>
            <script>
                sucess();
            </script>
            <%}%>

