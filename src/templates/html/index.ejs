<div class="modal" tabindex="-1" id="myModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Usar Mesa</h5>
                <button type="button" class="mdl-button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="idMesa">
                    <label for="name">Cliente</label>
                    <input style="width: 100% !important;" id="name" class="" required name="name" type='text'>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="usarMesa();" class="mdl-button">Usar</button>
                <button type="button" class="mdl-button" onclick="closeClickHandler()" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showClickHandler(idMesa) {
        document.querySelector('#idMesa').value = idMesa;
        $('#myModal').modal('show');

    };

    function usarMesa() {
        let idMesa = document.querySelector('#idMesa');
        let name = document.querySelector('#name');

        let data = {
            cliente: name.value,
            mesa: idMesa.value
        };
        // console.log(data, id);
        $.ajax({
            type: 'PUT',
            url: 'http://localhost:3000/use/mesa/' + idMesa.value,
            contentType: 'application/json',
            data: JSON.stringify(data), // access in body
            success: function() {
                window.location.reload(true);

            }
        })
    }

    function closeClickHandler() {
        $('#myModal').modal('hide');
    };
    $('#prev').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container').scrollLeft -= 50;

    });
    $('#next').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container').scrollLeft += 50;

    });
    $('#prev2').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container2').scrollLeft -= 50;

    });
    $('#next2').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container2').scrollLeft += 50;

    });

    function caixa(idCaixa) {
        window.location.href = "/financeiro/caixa/" + idCaixa;
    }
</script>