<script>
    function showClickHandler(idMesa) {
        document.querySelector('#idMesa').value = idMesa;
        $('#myModal').modal('show');

    };

    function usarMesa() {
        let idMesa = document.querySelector('#idMesa');
        let name = document.querySelector('#name');

        let data = {
            cliente: name.value,
            mesa: idMesa.value
        };
        // console.log(data, id);
        $.ajax({
            type: 'PUT',
            url: '/use/mesa/' + idMesa.value,
            contentType: 'application/json',
            data: JSON.stringify(data), // access in body
            success: function() {
                window.location.reload(true);

            }
        })
    }

    function closeClickHandler() {
        $('#myModal').modal('hide');
    };
    $('#prev').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container').scrollLeft -= 50;

    });
    $('#next').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container').scrollLeft += 50;

    });
    $('#prev2').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container2').scrollLeft -= 50;

    });
    $('#next2').click(function(event) {
        event.preventDefault();
        document.querySelector('.card-container2').scrollLeft += 50;

    });

    function caixa(idCaixa) {
        window.location.href = "/financeiro/caixa/" + idCaixa;
    }
</script>