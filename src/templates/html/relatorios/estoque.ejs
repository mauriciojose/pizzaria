<!DOCTYPE html>
<html lang="pt-br">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Caixa</title>
        <link rel="stylesheet" type="text/css" href="/templates/css/delivery.css">
        <link rel="stylesheet" href="/templates/css/estilo.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

        <style>
            tbody {
                background: transparent;
            }
        </style>
    </head>
    <script>
    </script>

    <body>
        <%- include('../componentes/menu.ejs'); -%>

            <h2>Relatório de Estoque</h2>
            <div class="notify"><span id="notifyType" class=""></span></div>
            <form action="/relatorio/estoque" method="POST">
                <div class="row">
                    <div class="form-row">
                        <div class="col-sm-3">
                            <label for="">De</label>
                            <input type="date" class="form-control" name="dataInicial" id="inicio" value="<%=dataInicial%>">
                        </div>
                        <div class="col-sm-3">
                            <label for="">Até</label>
                            <input type="date" name="dataFinal" class="form-control" id="fim" value="<%=dataFinal%>">
                        </div>
                        <div class="col-sm-2">
                            <label for="">&nbsp;</label>
                            <button class="form-control btn-primary" type="submit">Buscar</button>
                        </div>
                    </div>
                </div>
            </form>

            <% if(tipo == 1){ %>

                <table>
                    <thead>
                        <th>Data</th>
                        <th>Saldo Anterior</th>
                        <th>Entrada / Saída</th>
                        <th>Saldo</th>
                    </thead>
                    <tbody>
                        <% var produto = ''; %>
                        <% movimentacoes.forEach(function(movimentacao){ %>
                           <% if(movimentacao.produto._id != produto){ %>
                            <% produto = movimentacao.produto._id %>
                                <tr>
                                    <th colspan="4"> Produto: <%= movimentacao.produto.name %> - Saldo Atual: <%= movimentacao.produto.quantidade %> </th>
                                </tr>
                            <% } %>    
                        
                            
                            <tr>
                                <td> <%=movimentacao.createdAt.toLocaleString()%> </td>
                                <td> <%=movimentacao.saldoAnterior%> </td>
                                <td> <%=movimentacao.quantidadeEntrada%> </td>
                                <td> <%= ( movimentacao.saldoAnterior + movimentacao.quantidadeEntrada ) %> </td>
                            </tr>

                        <% }); %>
                    </tbody>
                </table>

            <% } %>

        <%- include('../componentes/rodape.ejs'); -%>
    </body>
</html>